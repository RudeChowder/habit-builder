<div class="card mb-3 w-100">
  <div class="card-header">
    <h5 class="card-title"><%= checkin.pretty_date %></h5>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <%= render partial: "habits/habit", collection: checkin.habits, locals: {user: checkin.user} %>
    </ul>
    <p class="card-text"><strong>Note:</strong> <%= checkin.notes %></p>
    <%= link_to "Edit", edit_user_checkin_path(checkin.user, checkin), class: "btn btn-primary btn-sm" %>
    <%= link_to "Delete", user_checkin_path(checkin.user, checkin), method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this checkin?"} %>
  </div>
</div>
